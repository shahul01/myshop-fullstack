{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types/", "src/types"]
  },
  "include": ["src/**/*.ts", "src/types/**/*"],
  "exclude": ["node_modules"]
}
